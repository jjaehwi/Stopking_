<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StopKing_project" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- 타이틀 바 없애기 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tabTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- 탭 테마 -->
        <item name="android:textSize">24dp</item>
        <item name="android:textColorPrimary">@android:color/holo_blue_bright
        </item>       <!-- 탭바 선택된 텍스트 색 -->
        <item name="android:textColorSecondary">@android:color/white</item>     <!-- 탭바 텍스트 색 -->
        <item name="tabIndicatorColor">@android:color/holo_blue_bright</item>      <!-- 탭바 선택시 색 -->
        <item name="colorAccent">@android:color/holo_blue_bright
        </item>            <!-- 하단 움직이는 바 색-->
    </style>
</resources>